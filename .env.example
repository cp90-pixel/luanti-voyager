# Luanti Voyager Environment Configuration
# Copy this file to .env and set your values

# =============================================================================
# LLM API Keys (Optional - choose one or more)
# =============================================================================

# OpenAI Configuration
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-4

# Anthropic Configuration  
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# Local LLM Configuration (Ollama)
# =============================================================================

# Ollama settings for local development (no API key needed!)
# Install: https://ollama.ai/
# Common models: llama3, codellama, mistral, qwen2.5
OLLAMA_MODEL=llama3
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Agent Configuration
# =============================================================================

# Default agent name
AGENT_NAME=VoyagerBot

# Luanti world path (auto-detected if not set)
# WORLD_PATH=/path/to/your/world

# Server connection
LUANTI_HOST=127.0.0.1
LUANTI_PORT=30000

# =============================================================================
# Web UI Configuration
# =============================================================================

# Web interface settings
WEB_PORT=8090
WEB_HOST=0.0.0.0

# Enable/disable features
ENABLE_3D_VIEWER=true
ENABLE_SCREENSHOT_PASTE=true

# =============================================================================
# Development Settings
# =============================================================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable verbose agent logging
VERBOSE_AGENT=false

# Development mode (extra debugging)
DEV_MODE=false